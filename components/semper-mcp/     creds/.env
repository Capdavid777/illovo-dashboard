SEMPER_BASE_URL=https://portal.semper.example/login
SEMPER_USERNAME=your_user
SEMPER_PASSWORD=your_password

# Google: service account JSON path (or use ADC on Cloud Run)
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# The Sheet you want to keep updated, and a folder for the XLSX export
SHEET_ID=your_google_sheet_id
SHEET_TAB=Raw
DRIVE_FOLDER_ID=your_drive_folder_id
XLSX_FILENAME=RS Dashboard Data.xlsx

# Cron for 06:00, 14:00, 22:00 daily (server's local TZ)
CRON=0 6,14,22 * * *
