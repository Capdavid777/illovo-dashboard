// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model DailyMetric {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  revenue   Int?
  target    Int?
  occupancy Float?      // store 46.0 for 46%
  arr       Int?
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomTypeMetric {
  id        Int      @id @default(autoincrement())
  date      DateTime
  type      String
  rooms     Int?
  available Int?
  sold      Int?
  revenue   Int?
  rate      Int?
  occupancy Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, type], name: "date_type")
  @@index([date])
}

model YearMetric {
  id        Int   @id @default(autoincrement())
  year      Int   @unique
  roomsSold Int   @default(0)
  occupancy Float @default(0)   // percent 0..100
  revenue   Int   @default(0)   // consider BigInt if totals can exceed ~2.1B
  rate      Int   @default(0)   // ADR

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/*
ALT (optional): use BigInt for revenue if values can exceed 2,147,483,647.
If you switch to BigInt, update both the schema and the DB via a migration,
and remember to handle BigInt in JSON serialization.

  // DailyMetric.revenue   BigInt?
  // RoomTypeMetric.revenue BigInt?
  // YearMetric.revenue    BigInt @default(0)
*/
